{
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ESNext",
    "moduleDetection": "force",
    "declaration": true,
    "outDir": "build",
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src", "index.ts"]
}